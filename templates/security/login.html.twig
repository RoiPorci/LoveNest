{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Connexion{% endblock %}

{% block body %}
    <div class="container-fluid parallax-window p-0 min-vh-100" data-parallax="scroll" data-image-src="{{ asset('img/pink-parallax.jpg') }}" data-bleed="50">
        <div class="d-flex min-vh-100">
        <div class="container col-lg-6 rounded overlay-dark my-2 p-4 align-self-center">
            <form method="post" class="mt-2">
                <h1 class="h3 mb-3">Connectez-vous!</h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes déjà connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="inputLogin">Email ou pseudo</label>
                    <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autofocus>
                </div>
                    <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" >
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-pink mt-2" type="submit">
                    <strong>Connexion</strong>
                </button>
            </form>
        </div>
        </div>
    </div>
{% endblock %}
